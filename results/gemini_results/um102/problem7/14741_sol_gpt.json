{
  "type": "theorem",
  "name": "Source at the Origin for Linear Differential Equations",
  "hypothesis": [
    {
      "type": "assume",
      "statement": "$\\dot{x} = x$"
    },
    {
      "type": "assume",
      "statement": "$\\dot{y} = y$"
    }
  ],
  "conclusion": "The origin is a source for the system",
  "status": "incomplete proof",
  "proof": {
    "type": "proof",
    "steps": [
      {
        "type": "assert",
        "claim": "$\\frac{d}{dt} \\begin{bmatrix} x \\\\ y \\end{bmatrix} = \\begin{bmatrix} 1 & 0 \\\\ 0 & 1 \\end{bmatrix} \\begin{bmatrix} x \\\\ y \\end{bmatrix}$",
        "proof-method": "Matrix representation of the system"
      },
      {
        "type": "let",
        "variable": "A",
        "value": "$\\begin{bmatrix} 1 & 0 \\\\ 0 & 1 \\end{bmatrix}$",
        "kind": "matrix"
      },
      {
        "type": "assert",
        "claim": "$v = Av$",
        "proof-method": "Eigenvalue equation for matrix $A$"
      },
      {
        "type": "assert",
        "claim": "$\\lambda_{1} = \\lambda_{2} = 1$, the eigenvalues of $A$",
        "proof-method": "Calculation of eigenvalues"
      },
      {
        "type": "let",
        "variable": "v_1",
        "value": "$(1, 0)$",
        "kind": "eigenvector"
      },
      {
        "type": "let",
        "variable": "v_2",
        "value": "$(0, 1)$",
        "kind": "eigenvector"
      },
      {
        "type": "assert",
        "claim": "$\\frac{dx}{dt} = x \\implies x = c_{1}e^{t}$",
        "proof-method": "Solving the differential equation for $x$"
      },
      {
        "type": "assert",
        "claim": "$\\frac{dy}{dt} = y \\implies y = c_{2}e^{t}$",
        "proof-method": "Solving the differential equation for $y$"
      },
      {
        "type": "assert",
        "claim": "$y = \\frac{c_{2}}{c_{1}} x = kx$",
        "proof-method": "Relationship between $x$ and $y$"
      },
      {
        "type": "assert",
        "claim": "$|x|$ and $|y|$ increase with increasing $t$",
        "proof-method": "Exponential growth of solutions"
      },
      {
        "type": "conclude",
        "statement": "The trajectory would be straight lines emerging from the origin, hence the origin is a source",
        "error": "The conclusion is not fully justified; a rigorous proof of the source property is missing"
      }
    ]
  },
  "missing": [
    {
