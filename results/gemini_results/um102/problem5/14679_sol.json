{
  "type": "theorem",
  "name": "Maximum Distance on Ellipsoid",
  "hypothesis": [
    {
      "type": "let",
      "variable": "Ellipsoid",
      "property": "defined by the equation $x^2 + 2y^2 + 3z^2 = 1$"
    }
  ],
  "conclusion": "The points (1, 0, 0) and (-1, 0, 0) on the ellipsoid have the largest distance from the origin.",
  "status": "proved",
  "proof": {
    "type": "proof",
    "steps": [
      {
        "type": "let",
        "variable": "f(x, y, z)",
        "value": "x^2 + 2y^2 + 3z^2 - 1"
      },
      {
        "type": "let",
        "variable": "g(x, y, z)",
        "value": "x^2 + y^2 + z^2 - r^2",
        "kind": "spherical function"
      },
      {
        "type": "assume",
        "statement": "f(x, y, z) is in the same direction as g(x, y, z)"
      },
      {
        "type": "assert",
        "claim": "∇f is in the same direction as ∇g",
        "deduced_from": [
          "f(x, y, z) is in the same direction as g(x, y, z)"
        ]
      },
      {
        "type": "assert",
        "claim": "∇f = λ∇g",
        "proof-method": "Expressing the directional relationship mathematically"
      },
      {
        "type": "assert",
        "claim": "(2x i + 4y j + 6z k) = λ(2x i + 2y j + 2z k)",
        "proof-method": "Expanding the gradients"
      },
      {
        "type": "cases",
        "on": "Equating individual components",
        "split-kind": "match",
        "proof-cases": [
          {
            "type": "case",
            "condition": "2 = 2λ",
            "proof": {
              "type": "proof",
              "steps": [
                {
                  "type": "assert",
                  "claim": "λ = 1",
                  "proof-method": "Simplification"
                },
                {
                  "type": "assert",
                  "claim": "x - y = 0",
                  "proof-method": "Substitution"
                },
                {
                  "type": "assert",
                  "claim": "This leads to the points (+1, 0, 0) and (-1, 0, 0) on the ellipsoid",
                  "proof-method": "Solving for x, y, and z"
                },
                {
                  "type": "assert",
                  "claim": "The distance from the origin for these points is 1",
                  "proof-method": "Calculating the distance"
                }
              ]
            }
          },
          {
            "type": "case",
            "condition": "4 = 2λ",
            "proof": {
              "type": "proof",
              "steps": [
                {
                  "type": "assert",
                  "claim": "λ = 2",
                  "proof-method": "Simplification"
                },
                {
                  "type": "assert",
                  "claim": "y - z = 0",
                  "proof-method": "Substitution"
                },
                {
                  "type": "assert",
                  "claim": "This leads to points on the ellipsoid where x = (1/√2) and y = z = 0",
                  "proof-method": "Solving for x, y, and z"
                },
                {
                  "type": "assert",
                  "claim": "The distance from the origin for these points is (1/√2)",
                  "proof-method": "Calculating the distance"
                }
              ]
            }
          },
          {
            "type": "case",
            "condition": "6 = 2λ",
            "proof": {
              "type": "proof",
              "steps": [
                {
                  "type": "assert",
                  "claim": "λ = 3",
                  "proof-method": "Simplification"
                },
                {
                  "type": "assert",
                  "claim": "k - z = 0 (This appears to be a typo and should likely be x - z = 0)",
                  "proof-method": "Substitution"
                },
                {
                  "type": "assert",
                  "claim": "This leads to points on the ellipsoid where z = (1/√3) and x = y = 0",
                  "proof-method": "Solving for x, y, and z (assuming the typo is corrected)"
                },
                {
                  "type": "assert",
                  "claim": "The distance from the origin for these points is (1/√3)",
                  "proof-method": "Calculating the distance"
                }
              ]
            }
          }
        ]
      },
      {
        "type": "conclude",
        "statement": "Comparing the distances from the origin in each case, we find that the points (+1, 0, 0) and (-1, 0, 0) from Case (i) have the largest distance."
      }
    ]
  }
}